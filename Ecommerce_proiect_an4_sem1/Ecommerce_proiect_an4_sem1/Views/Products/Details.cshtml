@model Ecommerce_proiect_an4_sem1.Models.Product

@{
    ViewData["Title"] = "Details";
    if (this.User.IsInRole("User"))
    {
        Layout = "~/Views/Shared/_LayoutUser.cshtml";
    }
    else if (!this.User.Identity.IsAuthenticated)
    {
        Layout = "~/Views/Shared/_LayoutNotLogedIn.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Price == 0)
            {@Html.DisplayFor(model => model.Price)}
        else
        {@Html.DisplayFor(model => model.Nprice)}
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductPicture)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.ProductPicture)" width="100px" height="150px" alt="Product picture"  />
        </dd>
        <dt class="col-sm-2">
            Sale Price
        </dt>
        <dd class="col-sm-10" color="red">
            @Html.DisplayFor(model => model.Nprice)
        </dd>
        <dd class="col-sm-10" color="red">
            <a href="~/specification_files/@Html.DisplayFor(model => model.SpecificationFile)"> Specification File</a>
        </dd>

    </dl>
</div>
<div>
    <a asp-action="AddToCart" asp-route-id="@Model.ProductId">Add To Cart</a> |
    @if (this.User.IsInRole("Admin"))
    {<a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a>}  |
    <a asp-action="Index">Back to List</a>
</div>
